<!DOCTYPE html>
<html>
  <head>
    <title>UnsplashLiker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">      
      <div class="container-fluid" id="navbarNav">
        <ul class="navbar-nav row">
          <li class="nav-item active col-6">
            <%= link_to("Home", home_path, {:class => "navBtn1"}) %>
          </li>
          <li class="nav-item active col-6">
            <%= link_to("Likes", like_path, {:class => "navBtn2"}) %>
          </li>
        </ul>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
