<div class='container'>
    <%= form_for :user, url: userEntry_url do |f| %>
        <p>
            <%= f.label("Enter your name to view and like photos", {:class => 'container--title'}) %><br>
            <%= f.text_field(:name, {:class => 'form-control container--form'}) %>
        </p>
        <p>
            <%= f.submit('Search photos', {:class => 'btn btn-primary container--btns--0'}) %>
        </p>
    <% end %>
</div>
